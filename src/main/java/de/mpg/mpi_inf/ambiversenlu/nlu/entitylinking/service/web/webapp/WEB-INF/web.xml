<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Entity Linking Web Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>de.mpg.mpi_inf.ambiversenlu.nlu.entitylinking.service.web</param-value>
        </init-param>
        <init-param>
            <param-name>javax.json.stream.JsonGenerator.prettyPrinting</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.scanning.recursive</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>
                de.mpg.mpi_inf.ambiversenlu.nlu.entitylinking.service.web.resource.impl.AnalyzeResourceImpl;de.mpg.mpi_inf.ambiversenlu.nlu.entitylinking.service.web.resource.impl.AnalyzeResourceWithFactsImpl;de.mpg.mpi_inf.ambiversenlu.nlu.entitylinking.service.web.resource.impl.AnalyzeResourcePreprocessedImpl
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Entity Linking Web Service</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>de.mpg.mpi_inf.ambiversenlu.nlu.entitylinking.service.web.ServiceContext</listener-class>
    </listener>

    <filter>
        <filter-name>QoSFilter</filter-name>
        <filter-class>org.eclipse.jetty.servlets.QoSFilter</filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>maxRequests</param-name>
            <param-value>5</param-value>
        </init-param>
        <init-param>
            <param-name>waitMs</param-name>
            <param-value>50</param-value>
        </init-param>
        <init-param>
            <param-name>suspendMs</param-name>
            <param-value>60000</param-value>
        </init-param>
        <init-param>
            <param-name>managedAttr</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>QoSFilter</filter-name>
        <url-pattern>/analyze</url-pattern>
        <url-pattern>/analyzepreprocessed</url-pattern>
        <!--<url-pattern>/analyzeWithFacts</url-pattern>-->
    </filter-mapping>
</web-app>